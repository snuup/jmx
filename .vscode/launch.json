{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Test File",
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "program": "${workspaceRoot}/node_modules/vitest/vitest.mjs",
            "args": [
                "run",
                "${relativeFile}"
            ],
            "smartStep": true,
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Vitest",
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "args": [
                "--run",
                "--inspect-brk"
            ],
            "autoAttachChildProcesses": true,
            "smartStep": true,
            "console": "integratedTerminal"
        }
    ]
}